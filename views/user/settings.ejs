<body>
    <header>
        <nav>
            <ul>
                <li><a href="/home">About Me</a></li>
                <li><a href="/galery">Galery</a></li>
                <li><a href="/price-list">Price list</a></li>
            </ul>
        </nav>
        <div id="banner">
            <figure>
                <img src="<%= banner %>" alt="Banner">
            </figure>
        </div>
    </header>
        <h1>Settings</h1>
        <div id="error-msg" class="hidden"><p></p></div>
        <div class="settings">

            <h3>About Me Text</h3>
            <hr>
            <form action="/update-text" method="post">
                <textarea name="text" cols="30" rows="4" placeholder="About Me Text" required></textarea>
                <button type="submit">Update About Me Text</button>
            </form>
            <br>

            <h3>Galery Images</h3>
            <hr>
            <form action="/new-image" method="post">
                <input type="text" name="url" placeholder="URL" required>
                <input type="text" name="caption" placeholder="Caption" required>
                <button>Upload New Image</button>
            </form>
            <br>

            <h3>Banner</h3>
            <hr>
            <form action="/switch-banner" method="post">
                <button>Close / Open Commissions</button>
            </form>
        </div>
